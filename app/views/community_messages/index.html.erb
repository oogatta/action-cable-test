<p id="notice"><%= notice %></p>

<h1>Community Messages</h1>

<table>
  <thead>
    <tr>
      <th>Community</th>
      <th>User</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @community_messages.each do |community_message| %>
      <tr>
        <td><%= community_message.community %></td>
        <td><%= community_message.user %></td>
        <td><%= community_message.body %></td>
        <td><%= link_to 'Show', community_message %></td>
        <td><%= link_to 'Edit', edit_community_message_path(community_message) %></td>
        <td><%= link_to 'Destroy', community_message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Community Message', new_community_message_path %>
